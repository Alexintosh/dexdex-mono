{
  "name": "dexdex-public",
  "private": true,
  "scripts": {
    "precommit": "wsrun precommit --fast-exit --parallel",
    "bootstrap": "lerna bootstrap",
    "packages:build": "wsrun build $PKG --fast-exit -r --stages --exclude @dexdex/typescript-typings",
    "packages:watch": "lerna run --parallel --ignore \"srv-*\" watch",
    "packages:test": "wsrun test $PKG --fast-exit -r --stages --exclude @dexdex/typescript-typings",
    "packages:clean": "wsrun clean $PKG  -r --fast-exit --parallel --exclude @dexdex/typescript-typings",
    "packages:publish": "lerna publish",
    "dockerize": "./bin/dockerize",
    "test": "yarn packages:test"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "prettier": "^1.13.3",
    "wsrun": "^2.2.0"
  }
}
